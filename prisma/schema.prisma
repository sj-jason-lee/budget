generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Transaction {
  id             String   @id @default(cuid())
  date           DateTime
  description    String
  subDescription String?
  amount         Decimal  @db.Decimal(10, 2)
  category       String?
  createdAt      DateTime @default(now())
}

model Budget {
  id        String   @id @default(cuid())
  category  String   @unique
  limit     Decimal  @db.Decimal(10, 2)
  createdAt DateTime @default(now())
}
